<!-- Overlay Login Form -->

  <div class="row" id="form-overlay">
   <!-- <div class="parallax"><img src="/assets/img/bg40.png" alt="Hero BG IMG"></div> -->
    <button class="btn waves-effect waves-light serif blue darken-4 center-align" id="form-close-btn"><a href="#">&times;</a></button>
    <div class="col m3"></div>

    <div class="col s12 m6">
      <div class="row">
        <h4 class="center-align top-margin white-text form-h4">Please login to create/view your Space Portfolio</h4><br><br>
      </div>

      <div class="row">
        <form class="signup">
          <div class="input-field col s12">
            <label for="email-input" class="white-text sans">Email</label>
            <input id="email-input" type="email" class="validate">
          </div>
          <div class="input-field col s12">
            <label for="password-input" class="white-text sans">Password</label>
            <input id="password-input" type="password" class="validate">          
            <button class="btn waves-effect waves-light serif blue darken-3 signup" type="submit" name="action" id="form-submit-btn">Sign Up
            <i class="material-icons right">send</i>
            </button>
          </div>
        </form>
        <form class="login">
            <button class="btn waves-effect waves-light serif blue darken-3 login" type="submit" name="action" id="form-submit-btn">Login
                <i class="material-icons right">send</i>
            </button>
        </form>
      </div>
    </div>
  </div>

<!-- Hero Image/Text -->

  <div class="section no-pad-bot">
    <div class="container">
      <br><br>
      <h1 class="header center white-text hero-h1">SpacePort(folio)</h1>
      <div class="row center">
        <h5 class="header col s12 header center white-text hero-h2">Find &amp; Save Your Favorite Space Images</h5>
      </div>
      <div class="row center">
      </div>
      <br><br>
    </div>
  </div>
  <div class="parallax"><img src="/assets/img/bg40.png" alt="Hero BG IMG"></div>

</div>



<div class="row" id="row-1">

  {{#each photos}}
  <div class="col s12 m6 l3">
    <div class="card">
      <div class="card-image waves-effect waves-block waves-light">
        {{!--code to wrap each image in lightbox code--}}
        <a href={{this.url}} data-lightbox="image-1"><img class="activator" src={{this.url}}></a>

        {{!--<img class="activator" src={{this.url}}>--}}
      </div>
      <div class="card-content">
       <h4> {{this.title}}</h4>
        <span class="card-title activator grey-text text-darken-4">Click for more info<i class="material-icons right">more_vert</i></span>
        <p>Add To Portfolio</p>
        <p>

          <!-- Switch -->
          <div class="switch">
            <label>
            Off
            <input type="checkbox" class="photoSlider" value={{this.id}}>
            <span class="lever"></span>
            On
          </label>
          </div>
        </p>
      </div>

      <div class="card-reveal">
        <span class="card-title grey-text text-darken-4">{{this.title}}<i class="material-icons right">close</i></span>
        <p>{{this.explanation}}</p>
      </div>
    </div>
  </div>
  {{/each}}
</div>




